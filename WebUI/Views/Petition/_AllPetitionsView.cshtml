@{
}

<head>
    <style>
        .link_button {
            -webkit-border-radius: 4px;
            -moz-border-radius: 4px;
            border-radius: 4px;
            border: solid 1px #20538D;
            text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.4);
            -webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
            -moz-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
            box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
            background: #4479BA;
            color: #FFF;
            padding: 8px 12px;
            text-decoration: none;
        }

        .header {
            display: table;
            width: 100%;
            padding-right: 15px;
            padding-top: 10px;
            height: 60px;
            background-color: transparent;
            padding-left: 15px;
            margin-right: auto;
            margin-left: auto;
        }
    </style>
</head>

@model IEnumerable<IPetition>

<h1>Petitions</h1>
@{
    <h2> Opened Petition </h2>
    foreach (var petition in @Model.Where(x => !x.IsClosed))
    {
        <div class="header">
            <div style="vertical-align: text-top;">
                @if (GlobalProperties.User != null)
                {
                    if(!petition.CurrentVoices.Any(x => x == GlobalProperties.User.Id))
                    {
                        <a class="link_button" style="float:left; margin-right: 20px"
                            asp-controller="Petition" asp-action="SignPetition" asp-route-id=@petition.Id> Sign </a>
                    }
                    
                    if(petition.UserId == GlobalProperties.User.Id)
                    {
                         <a class="link_button" style="float:left; margin-right: 20px"
                            asp-controller="Petition" asp-action="ClosePetition" asp-route-id=@petition.Id> Close </a>
                    }
                }


                <div style="display:table-cell;">
                    <h3 style="float:left;">
                        @petition.Name
                    </h3>
                    <h3 style="margin-left: 20px; float:left;">
                        @petition.CurrentVoices.Count / @petition.MaxVoices
                    </h3>
                </div>
            </div>
            <hr>
            <h4>
                @petition.Description
            </h4>
        </div>
        <br />
        <br />
    }

    <hr>

    <h2> Closed Petition </h2>
    foreach (var petition in @Model.Where(x => x.IsClosed))
    {
        <div class="header">
            <div style="vertical-align: text-top;">
                <div style="display:table-cell;">
                    <h3 style="float:left;">
                        @petition.Name
                    </h3>
                    <h3 style="margin-left: 20px; float:left;">
                        @petition.CurrentVoices.Count / @petition.MaxVoices
                    </h3>
                </div>
            </div>
            <hr>
            <h4>
                @petition.Description
            </h4>
        </div>
        <br />
        <br />
    }
}