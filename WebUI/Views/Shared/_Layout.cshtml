<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Open Petition</title>
    <style>
        .link_button {
            -webkit-border-radius: 4px;
            -moz-border-radius: 4px;
            border-radius: 4px;
            border: solid 1px #20538D;
            text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.4);
            -webkit-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
            -moz-box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
            box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4), 0 1px 1px rgba(0, 0, 0, 0.2);
            background: #4479BA;
            color: #FFF;
            padding: 8px 12px;
            text-decoration: none;
        }
        .header {
            display:table;
            width: 100%; 
            padding-right: 15px; 
            height:60px; 
            background-color:lightcyan; 
            padding-left: 15px; 
            margin-right: auto; 
            margin-left: auto;
        }
    </style>
</head>

<body>
    <header>
        <nav>
            <div class="header">
                <div style="display:table-cell; vertical-align: middle;">
                    <div style="float: left;">
                        <a class="link_button" asp-controller="Guest" asp-action="Index">Home</a>
                    </div>
                    <div style="float: right; margin-right:20px; vertical-align: middle;">
                        @{
                            if (@GlobalProperties.User == null)
                            {
                                <a class="link_button" asp-controller="Auth" asp-action="LoginView">Login</a>
                                <a class="link_button" asp-controller="Auth" asp-action="RegisterView">Register</a>
                            }
                            else
                            {
                                @GlobalProperties.User.Name
                                <a class="link_button" style="margin-left:20px" asp-controller="Auth" asp-action="LogoutAction">Log out</a>
                            }
                        }
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="width: 100%; padding-right: 15px; padding-left: 15px; margin-right: auto; margin-left: auto;">
        <main role="main">
            @RenderBody()
        </main>
    </div>

</body>

</html>